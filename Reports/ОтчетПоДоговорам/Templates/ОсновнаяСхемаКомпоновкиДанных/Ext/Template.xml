ВЫБРАТЬ
	ВТ_Договоры.Договор.Контрагент КАК Контрагент,
	ВТ_Договоры.Договор,
	ВТ_Договоры.Договор.Проект КАК Проект,
	ВТ_Договоры.ЗадачаПроекта,
	ВТ_Договоры.Сумма КАК СуммаПоДоговору,
	ЕСТЬNULL(Акты.Ссылка, ЗНАЧЕНИЕ(Документ.ДокументУТ.ПустаяСсылка)) КАК Акт,
	ЕСТЬNULL(Акты.Сумма, 0) КАК СуммаАкта,
	ЕСТЬNULL(Оплата.Ссылка, ЗНАЧЕНИЕ(Документ.Оплата.ПустаяСсылка)) КАК Оплата,
	ЕСТЬNULL(Оплата.Сумма, 0) КАК СуммаОплаты
ИЗ
	ВТ_Договоры КАК ВТ_Договоры
		ЛЕВОЕ СОЕДИНЕНИЕ Документ.ДокументУТ.КоммерческоеВознаграждение КАК Акты
		ПО ВТ_Договоры.ЗадачаПроекта = Акты.ЗадачаПроекта
			И ВТ_Договоры.Договор = Акты.Ссылка.Договор
		ЛЕВОЕ СОЕДИНЕНИЕ Документ.Оплата.РасшифровкаПлатежа КАК Оплата
		ПО ВТ_Договоры.ЗадачаПроекта = Оплата.ЗадачаПроекта
			И ВТ_Договоры.Договор = Оплата.Ссылка.Договор
ГДЕ
	Акты.Ссылка.Проведен
	И Оплата.Ссылка.Проведен

