	Отбор.Вставить( "ПоступлениеБезналичныхДенежныхСредств", ОплатаОЛЕ );
	ВыбОплаты = БазаОЛЕ.РегистрыСведений.ПлатежиПоДокументамЗаказа.Выбрать( Отбор );
